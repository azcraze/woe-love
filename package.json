{
  "name": "woe-love",
  "version": "1.0.0",
  "description": "custom person module",
  "main": "index.js",
  "scripts": {
    "test": "test",
    "commit": "git-cz",
    "changelog": "auto-changelog -p --template keepachangelog  --release-summary && git add CHANGELOG.md",
    "release": "dotenv -e .env -- semantic-release"
  },
  "release": {
    "path": "./releaserc.js",
    "plugins": [
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ]
    ],
    "branches": [
      "main",
      "develop"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx semantic-release --dry-run && git add CHANGELOG.md package.json"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git",
      "useEmoji": true,
      "czConfig": "./.cz-config.js"
    }
  },
  "author": "azcraze",
  "license": "MIT",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "auto-changelog": "^2.4.0",
    "commitizen": "^4.3.0",
    "cz-git": "^1.6.1",
    "cz-gitmoji": "^0.0.7",
    "dotenv": "^16.0.3",
    "husky": "^8.0.3",
    "semantic-release-gitmoji": "^1.6.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/azcraze/woe-love.git"
  },
  "dependencies": {
    "gradient-string": "^2.0.2",
    "jsome": "^2.5.0",
    "pretty-error": "^4.0.0",
    "typy": "^3.3.0",
    "winston": "^3.8.2"
  }
}
