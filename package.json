{
  "name": "woe-love",
  "version": "0.0.0-development",
  "description": "custom person module",
  "main": "index.js",
  "scripts": {
    "test": "test",
    "commit": "git-cz",
    "semantic-release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx semantic-release --dry-run && git add CHANGELOG.md package.json"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git",
      "useEmoji": true,
      "czConfig": "./.cz-config.js"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/gitmoji",
        {
          "releaseRules": {
            "🎉": "Initial release",
            "✨": "Release with new features",
            "🐛": "Release with bug fixes",
            "📝": "Release with documentation updates",
            "🚨": "Release with breaking changes",
            "🔥": "Release with code removal",
            "🤖": "Release with automation changes",
            "👷": "Release with CI/CD changes",
            "⏪": "Rollback to previous release"
          }
        }
      ],
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "echo 'Preparing release ${nextRelease.version}'",
          "successCmd": "echo 'Release ${nextRelease.version} was successful!'",
          "failCmd": "echo 'Release failed!'"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/*.zip",
              "label": "Zip file"
            },
            {
              "path": "dist/*.tar.gz",
              "label": "Tarball"
            }
          ]
        }
      ]
    ],
    "preset": "angular",
    "branches": [
      "main",
      "develop"
    ],
    "commitMessage": "chore(release): {{nextRelease.version}} [skip ci]\n\n{{#if notes}}{{{notes}}}{{/if}}",
    "tagFormat": "{{version}}"
  },
  "author": "azcraze",
  "license": "MIT",
  "devDependencies": {
    "commitizen": "^4.3.0",
    "cz-git": "^1.6.1",
    "cz-gitmoji": "^0.0.7",
    "dotenv": "^16.0.3",
    "husky": "^8.0.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/azcraze/woe-love.git"
  },
  "dependencies": {
    "mkabs": "^1.2.4"
  }
}
